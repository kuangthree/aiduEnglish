<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ecnu.ireader.view_controller.WordActivity">

    <TextView
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:id="@+id/wd_word_text"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/wd_level_text"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:textColor="#ffFFF5F7"
        android:textStyle="bold"
        android:textSize="18sp"
        />


    <TextView
        android:id="@+id/wd_meaning_text"
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:background="#ffFFF5F7"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#3C3C3C"
        android:lineSpacingMultiplier="1.2"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:layout_width="30dp"
        android:textColor="@android:color/white"
        android:id="@+id/wd_colbt"
        android:textSize="25sp"
        android:background="@android:color/transparent"
        android:layout_height="30dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="访问搜狗词典获得详细释义"
        android:id="@+id/wd_web_bt"/>
</LinearLayout>
